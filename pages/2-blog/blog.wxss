.blog_cate {
  position: fixed;
  left: 0;
  width: 100%;
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
  z-index: 99;
  background-color: rgba(255, 255, 255, 0.8);
}

.blog_cate .blog_cate_list {
  white-space: nowrap;
}

.blog_cate .blog_cate_list .blog_cate_list_item {
  display: inline-block;
  height: 30px;
  line-height: 30px;
  font-size: 15px;
  font-weight: lighter;
  text-align: center;
  padding: 5px 15px;
  border-bottom: 2px solid #fff;
  color: #000;
  transition: all .3s;
}

.blog_cate .blog_cate_list .blog_cate_list_item:last-child {
  margin-right: 40px;
}

.blog_cate .blog_cate_list .blog_cate_list_item.active {
  font-weight: bold;
  font-size: 15px;
  border-bottom: 2px solid #000;
  background: rgba(0, 0, 0, 0.5);
  color: #FFF;
}

.blog_cate .blog_cate_list_more {
  width: 40px;
  height: 43px;
  line-height: 43px;
  background: linear-gradient(to right, rgba(255, 255, 255, 0.85) 20%, white 100%);
  position: absolute;
  top: 0;
  right: 0;
  text-align: center;
  opacity: 0.7;
}

.blog_cate .blog_cate_list_more .fa {
  font-size: 20px;
  color: rgba(0, 0, 0, 0.8);
}

page .blog_page {
  padding: 105rpx 25rpx 120rpx 25rpx;
}

page .blog_page .blog_list {
  padding: 10rpx;
}

page .blog_page .blog_list .blog_item {
  border-bottom: 1px solid #ddd;
  margin-bottom: 40rpx;
  box-shadow: 0 3px 9px rgba(0, 0, 0, 0.2);
  padding: 20rpx;
  border-radius: 10rpx;
}

page .blog_page .blog_list .blog_item .blog_title {
  font-size: 40rpx;
  font-weight: bold;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  margin-bottom: 15rpx;
}

page .blog_page .blog_list .blog_item .blog_info {
  display: flex;
  justify-content: flex-start;
}

page .blog_page .blog_list .blog_item .blog_info view {
  font-weight: lighter;
  font-size: 25rpx;
}

page .blog_page .blog_list .blog_item .blog_info view .fa {
  margin-right: 15rpx;
  font-weight: lighter;
}

page .blog_page .blog_list .blog_item .blog_info text.blog_info_divide {
  margin: 0 18rpx;
  font-size: 20rpx;
}

page .blog_page .blog_list .blog_item .blog_description {
  font-size: 30rpx;
  font-weight: lighter;
  margin: 20rpx 0;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

page .blog_page .blog_list .blog_item .blog_img {
  position: relative;
  display: flex;
  box-shadow: 1px 5px 18px rgba(0, 0, 0, 0.4) inset;
  border-radius: 15rpx;
}

page .blog_page .blog_list .blog_item .blog_img image {
  width: 100%;
  height: 26vh;
  z-index: -1;
  vertical-align: top;
  border-radius: 15rpx;
}

page .blog_page .blog_list .blog_item .blog_img.blog_video .fa {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #fff;
  font-size: 150rpx;
  opacity: .5;
}

page .blog_page .blog_list .blog_item .blog_link {
  display: inline-block;
  border-bottom: 3px solid #000;
  font-weight: lighter;
  margin-top: 30rpx;
}

page .blog_page .blog_list .blog_item .blog_list_empty {
  text-align: center;
}

page .blog_page .blog_list .blog_item .blog_list_empty text {
  font-size: 40rpx;
  font-weight: bold;
}
