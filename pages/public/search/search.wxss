.content_page {
  padding: 20rpx;
}

.content_page .search_form {
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.content_page .search_form .search_input {
  width: 80%;
  height: 80rpx;
  position: relative;
  background-color: #ededed;
  border-radius: 40rpx;
}

.content_page .search_form .search_input icon:first-child {
  position: absolute;
  left: 20rpx;
  top: 50%;
  transform: translateY(-50%);
}

.content_page .search_form .search_input input[type="search"] {
  width: 65%;
  height: 100%;
  padding-left: 60rpx;
}

.content_page .search_form .search_input icon:last-child {
  position: absolute;
  right: 25rpx;
  top: 50%;
  transform: translateY(-50%);
  padding: 15rpx;
}

.content_page .search_form .search_cancel {
  width: 20%;
  padding: 0 0 0 35rpx;
}

.content_page .search_history,
.content_page .search_his_hot {
  padding: 50rpx 0;
}

.content_page .search_history .search_his_div,
.content_page .search_his_hot .search_his_div {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 50rpx;
  padding: 15rpx;
}

.content_page .search_history .search_his_div .search_his_title,
.content_page .search_his_hot .search_his_div .search_his_title {
  display: flex;
  align-items: center;
}

.content_page .search_history .search_his_div .search_his_title icon,
.content_page .search_his_hot .search_his_div .search_his_title icon {
  font-size: 10rpx;
}

.content_page .search_history .search_his_div .search_his_title text,
.content_page .search_his_hot .search_his_div .search_his_title text {
  font-size: 35rpx;
  color: #333;
  padding-left: 10rpx;
}

.content_page .search_history .search_his_div .search_his_clear,
.content_page .search_his_hot .search_his_div .search_his_clear {
  font-size: 30rpx;
  color: #666;
  padding-right: 15rpx;
}

.content_page .search_history .search_his_list,
.content_page .search_his_hot .search_his_list {
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.content_page .search_history .search_his_list .search_list_item,
.content_page .search_history .search_his_list .search_his_list_item,
.content_page .search_his_hot .search_his_list .search_list_item,
.content_page .search_his_hot .search_his_list .search_his_list_item {
  padding: 10rpx 20rpx;
  margin: 0 10rpx 15rpx 0;
  background-color: #e9e9e9;
  border-radius: 30rpx;
}

.content_page .search_history .search_his_list .search_list_item text.search_his_text,
.content_page .search_history .search_his_list .search_his_list_item text.search_his_text,
.content_page .search_his_hot .search_his_list .search_list_item text.search_his_text,
.content_page .search_his_hot .search_his_list .search_his_list_item text.search_his_text {
  padding-right: 10rpx;
}

.content_page .search_history .search_his_list .search_list_item text,
.content_page .search_history .search_his_list .search_his_list_item text,
.content_page .search_his_hot .search_his_list .search_list_item text,
.content_page .search_his_hot .search_his_list .search_his_list_item text {
  color: #666;
  font-weight: lighter;
}

.content_page .search_history .search_his_hot_title,
.content_page .search_his_hot .search_his_hot_title {
  padding: 15rpx 0;
}

.content_page .search_history .search_his_hot_title text.search_his_hot_text,
.content_page .search_his_hot .search_his_hot_title text.search_his_hot_text {
  padding-left: 10rpx;
}

.content_page .search_history .search_his_hot_title text,
.content_page .search_his_hot .search_his_hot_title text {
  font-size: 35rpx;
}

.content_page .hr {
  width: 100%;
  height: 1px;
  background-color: #eee;
}
